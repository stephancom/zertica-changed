.centertext= link_to 'Pay with card', '#cardModal', data: {toggle: :modal}, role: :button, class: [:btn, 'btn-success', 'btn-large', :sharp]

#cardModal.modal.hide.fade.centertext aria-hidden="true" aria-labelledby="cardModalLabel" role="dialog" tabindex="-1"
  .modal-header
    button.close aria-hidden="true" data-dismiss="modal" type="button"
    h3#cardModalLabel Checkout: #{number_to_currency @order.price}
  .modal-body
    p= image_tag 'credit_card_logos_10.gif'
    = simple_form_for @order, as: :pay_order, url: pay_order_path(@order), method: :post, html: {class: 'form-horizontal', data: {balanced: :payment}} do |f|
      .progress.loading.hide
        .bar style="width: 60%;"
          p
      = f.input :user_name
      = f.input :user_email
      = f.input :card_number, as: :fake
      = f.input :cvc, as: :fake
      = f.input :expiration_month, as: :fake
      = f.input :expiration_year, as: :fake
      = f.input :card_uri, as: :hidden
      = f.button :submit, 'Pay', class: [:btn, 'btn-success', 'btn-large', :sharp]
