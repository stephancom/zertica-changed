

 <%= simple_form_for [@order], :html => { :class => "form-vertical offset1" }  do |f| %>

  <script type="text/javascript">
    $(document).ready(function(){
      $('[data-behaviour~=datepicker]').datepicker({
          orientation: "top auto",
          autoclose: true,
          todayHighlight: true

      });
    })
  </script>
  <div class="field">
    <%= f.input :order_type, collection: Order::ORDER_TYPES, as: :radio_buttons if @order.new_record? %>
  </div>
  <br>
  <br>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'span10', :placeholder => 'ex. Greatest Invention Ever' %>
  </div>
  <p>Fill in the information as best you can.</p>
  <table>
  <tr>
    <td style="padding-right:15px;">
      <div class="field">
        <%= f.label :budget %>
        <%= f.text_field :budget, :class => 'span12', :placeholder => 'ex. Under $500' %>
      </div>
    </td>
    <td style="padding-right:15px;">
      <div class="field input-append date" data-behaviour='datepicker'>
        <%= f.label :deadline %>
        <%= f.text_field :deadline, :class => 'span10'%>
        <span class="add-on"><i class="icon-th"></i></span>
      </div>

    </td>
    <td style="padding-right:15px;">
       <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city, :class => 'span12' %>
      </div>
    </td>
    <td style="padding-right:15px;">
       <div class="field">
        <%= f.label :state %>
        <%= f.select 'province', options_for_select([ 
                ["AK", "Alaska"], 
                ["AL", "Alabama"], 
                ["AR", "Arkansas"], 
                ["AS", "American Samoa"], 
                ["AZ", "Arizona"], 
                ["CA", "California"], 
                ["CO", "Colorado"], 
                ["CT", "Connecticut"], 
                ["DC", "District of Columbia"], 
                ["DE", "Delaware"], 
                ["FL", "Florida"], 
                ["GA", "Georgia"], 
                ["GU", "Guam"], 
                ["HI", "Hawaii"], 
                ["IA", "Iowa"], 
                ["ID", "Idaho"], 
                ["IL", "Illinois"], 
                ["IN", "Indiana"], 
                ["KS", "Kansas"], 
                ["KY", "Kentucky"], 
                ["LA", "Louisiana"], 
                ["MA", "Massachusetts"], 
                ["MD", "Maryland"], 
                ["ME", "Maine"], 
                ["MI", "Michigan"], 
                ["MN", "Minnesota"], 
                ["MO", "Missouri"], 
                ["MS", "Mississippi"], 
                ["MT", "Montana"], 
                ["NC", "North Carolina"], 
                ["ND", "North Dakota"], 
                ["NE", "Nebraska"], 
                ["NH", "New Hampshire"], 
                ["NJ", "New Jersey"], 
                ["NM", "New Mexico"], 
                ["NV", "Nevada"], 
                ["NY", "New York"], 
                ["OH", "Ohio"], 
                ["OK", "Oklahoma"], 
                ["OR", "Oregon"], 
                ["PA", "Pennsylvania"], 
                ["PR", "Puerto Rico"], 
                ["RI", "Rhode Island"], 
                ["SC", "South Carolina"], 
                ["SD", "South Dakota"], 
                ["TN", "Tennessee"], 
                ["TX", "Texas"], 
                ["UT", "Utah"], 
                ["VA", "Virginia"], 
                ["VI", "Virgin Islands"], 
                ["VT", "Vermont"], 
                ["WA", "Washington"], 
                ["WI", "Wisconsin"], 
                ["WV", "West Virginia"], 
                ["WY", "Wyoming"] 
              ]) %>

      </div>
    </td>
  </tr>
  <tr>
    <td style="padding-right:15px;">
       <div class="field">
        <%= f.label :material %>
        <%= f.text_field :material, :class => 'span12', :placeholder => 'ex. ABS Plastic' %>
      </div>
    </td>
    <td style="padding-right:15px;">
      <div class="field">
        <%= f.label :color %>
        <%= f.text_field :color, :class => 'span12', :placeholder => 'ex. Magenta' %>
      </div>
    </td>
    <td style="padding-right:15px;">
      <div class="field">
        <%= f.label :quantity %>
        <%= f.text_field :quantity, :class => 'span12', :placeholder => 'ex. 2' %>
      </div>
    </td>
    <td style="padding-right:15px;">
      <div class="field">
        <%= f.label :software_program %>
        <%= f.text_field :software_program, :class => 'span12', :placeholder => 'ex. Solidworks' %>
      </div>
    </td>
    <td style="">
      <div class="field">
        <%= f.label :file_format %>
        <%= f.text_field :file_format, :class => 'span10', :placeholder => 'ex. .SLDPRT' %>
      </div>
    </td>
  </tr>
  </table>
  <div class="text">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => "10", placeholder: 'Please be as descriptive as possible. The more information that you put here, the more accurate the bids will be for your order.', :class => 'span10 offset1' %>
  </div>

  <div class="actions" style='padding-left:680px;'>
    <%= f.submit :class => 'btn btn-primary sharp' %>
  </div>
  <% end %>
  
