

 <%= simple_form_for [@order], :html => { :class => "form-vertical offset1" }  do |f| %>

  <div class="field">
    <%= f.input :order_type, collection: Order::ORDER_TYPES, as: :radio_buttons if @order.new_record? %>
  </div>
  <br>
  <br>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'span10', :placeholder => 'ex. Greatest Invention Ever' %>
  </div>
  <table>
  <tr>
    <td style="padding-right:10px;">
      <div class="field">
        <%= f.label :deadline %>
        <%= f.text_field :deadline, :class => 'span12' %>
      </div>
    </td>
    <td style="padding-right:10px;">
       <div class="field">
        <%= f.label :color %>
        <%= f.text_field :color, :class => 'span12', :placeholder => 'ex. Magenta' %>
      </div>
    </td>
    <td style="padding-right:10px;">
       <div class="field">
        <%= f.label :material %>
        <%= f.text_field :material, :class => 'span12', :placeholder => 'ex. ABS Plastic' %>
      </div>
    </td>
  </tr>
  <tr>
    <td style="padding-right:10px;">
      <div class="field">
        <%= f.label :budget %>
        <%= f.text_field :budget, :class => 'span12' %>
      </div>
    </td>
    <td style="padding-right:10px;">
      <div class="field">
        <%= f.label :quantity %>
        <%= f.text_field :quantity, :class => 'span12', :placeholder => 'ex. 2' %>
      </div>
    </td>
    <td style="padding-right:10px;">
      <div class="field">
        <%= f.label :software_program %>
        <%= f.text_field :software_program, :class => 'span12', :placeholder => 'ex. Solidworks' %>
      </div>
    </td>
    <td style="padding-right:10px;">
      <div class="field">
        <%= f.label :file_format %>
        <%= f.text_field :file_format, :class => 'span12', :placeholder => 'ex. .SLDPRT' %>
      </div>
    </td>
  </tr>
  </table>
  <div class="text">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => "10", placeholder: 'Please be as descriptive as possible. The more information you put here the more accurate the bids will be for your order.', :class => 'span10 offset1' %>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary sharp offset8' %>
  </div>
  <% end %>
  
