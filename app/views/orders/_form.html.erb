

 <%= simple_form_for [@order], :html => { :class => "form-vertical offset1" }  do |f| %>

  <div class="field">
    <%= f.input :order_type, collection: Order::ORDER_TYPES, as: :radio_buttons if @order.new_record? %>
  </div>
  <br>
  <br>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'span10' %>
  </div>
  <div class="text">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => "10", placeholder: 'Please be as descriptive as possible.', :class => 'span10 offset1' %>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary sharp offset8' %>
  </div>
  <% end %>
  
