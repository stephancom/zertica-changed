 <%= simple_form_for [@admin, @storefront], :html => { :class => "form-vertical offset1" }  do |f| %>

  <br>
  <br>
  <div class="field">
    <%= f.label :storefront_name %>
    <%= f.text_field :vendor_name, :class => 'span10', :placeholder => 'King of 3D' %>
  </div>
  <div class="row-fluid">
    <div class="field span3">
      <%= f.label :do_you_offer_cad? %>
      <%= f.select 'cad', options_for_select([["Yes", "true"], ["No", "false"]]) %>
    </div>
    <div class="field span3">
      <%= f.label :do_you_offer_printing? %>
      <%= f.select 'print', options_for_select([["Yes", "true"], ["No", "false"]]) %>
    </div>
    <div class="field span3">
      <%= f.label :do_you_ship? %>
      <%= f.select 'ships', options_for_select([["Yes", "true"], ["No", "false"]]) %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="field span3">
      <%= f.label :do_you_offer_local_pickup? %>
      <%= f.select 'pickup', options_for_select([["Yes", "true"], ["No", "false"]]) %>
    </div>
    <div class="field span2">
      <%= f.label :city %>
      <%= f.text_field :city, :class => 'span12' %>
    </div>
    <div class="field span2">
      <%= f.label :state %>
      <%= f.text_field :state, :class => 'span12' %>
    </div>

  </div>
  <div class="field">
    <%= f.label :describe_your_capabilities %>
    <%= f.text_area :description, :class => 'span10', :rows => 6, :placeholder => 'Be specific about your capabilities and what an awesome maker you are.' %>
  </div>
    <div class="field">
    <%= f.label :paste_image_link_here %>
    <%= f.text_field :image1, :class => 'span10', :placeholder => 'Paste up to four links to examples of your work.' %>
  </div>
    <div class="field">
    <%= f.label :paste_image_link_here %>
    <%= f.text_field :image2, :class => 'span10', :placeholder => 'You can use imgur.com to get started,' %>
  </div>
    <div class="field">
    <%= f.label :paste_image_link_here %>
    <%= f.text_field :image3, :class => 'span10', :placeholder => "Or any method to link images you'd like." %>
  </div>
    <div class="field">
    <%= f.label :paste_image_link_here %>
    <%= f.text_field :image4, :class => 'span10' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary sharp offset8' %>
  </div>
  <% end %>
  
