 <%= simple_form_for [@admin, @storefront], :html => { :class => "form-vertical offset1" }  do |f| %>

  <br>
  <br>
  <div class="field">
    <%= f.label :vendor_name %>
    <%= f.text_field :vendor_name, :class => 'span10' %>
  </div>
  <div class="row-fluid">
    <div class="field span3">
      <%= f.label :do_you_ship? %>
      <%= f.select 'ships', options_for_select([["Yes", "true"], ["No", "false"]]) %>
    </div>
    <div class="field span3">
      <%= f.label :do_you_offer_local_pickup? %>
      <%= f.select 'pickup', options_for_select([["Yes", "true"], ["No", "false"]]) %>
    </div>
    <div class="field span2">
      <%= f.label :city %>
      <%= f.text_field :city, :class => 'span12' %>
    </div>
    <div class="field span2">
      <%= f.label :state %>
      <%= f.text_field :state, :class => 'span12' %>
    </div>
  </div>
  <div class="field">
    <%= f.label :printing_capabilities %>
    <%= f.text_area :printing_capabilities, :class => 'span10', :rows => 6 %>
  </div>
  <div class="field">
    <%= f.label :cad_capabilities %>
    <%= f.text_area :cad_capabilities, :class => 'span10', :rows => 6 %>
  </div>
  <div class="field">
    <%= f.label :additional_details %>
    <%= f.text_area :description, :class => 'span10', :rows => 6 %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary sharp offset8' %>
  </div>
  <% end %>
  
