
  <%= simple_form_for [@order, @bid], :html => { :class => "form-vertical offset1" }  do |f| %>
 
  <div class="field">
    <%= f.label :rate %>
    $ <input type="text" id="rate" placeholder="100"></input>

  </div>
  <div class="field">
    <%= f.label :rate_type %>
    <%= f.select :pay_schedule, options_for_select(['fixed', 'hourly']) %>
  </div>
  <div class="field">
    <%= f.label :estimated_hours %>
    <%= f.text_field :estimated_hours, :class => 'span2', :id => 'hours' %>
  </div>
  <div class="field"> 
    <%= f.label :what_you_receive %>
    $ <input type="text" class="subtotal" disabled="true"></input>

    <%= f.text_field :subtotal, :class => 'span2 subtotal', :hidden => true %>
  </div>
  <div class="field">
    <%= f.label :what_customer_sees %>
    $ <input type="text" id="price" disabled="true"></input>
  </div>

  <div class="text">
    <%= f.label :message %>
    <%= f.text_area :message, :rows => "6", placeholder: 'Shoot over an introduction to the customer.', :class => 'span10 offset1' %>
  </div>

  <div class="actions">
    <%= f.submit 'Submit Proposal', :class => 'btn btn-primary sharp offset8' %>
  </div>
  <% end %>
  