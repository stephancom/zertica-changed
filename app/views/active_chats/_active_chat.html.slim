.tab-pane id=dom_id(active_chat) class=chatters_class(active_chat)
	= subscribe_to active_chat.message_channel
	= button_to 'Close', active_chat, method: :delete, remote: true, data: {confirm: 'Are you sure? This will close the chat for the other party as well.'}, class: 'btn btn-link pull-right ', :style => 'margin-top:-28px;color: #D90000'
	= render 'messages/messages_panel', active_chat: active_chat